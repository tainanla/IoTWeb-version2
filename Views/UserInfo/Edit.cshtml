@model OneNETDataReceiver.Model.UserInfo
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPage3.cshtml";
}
<link rel="stylesheet" href="~/CSS/auth.css">
<div class="lowin">
    <div class="lowin-wrapper">
        <div class="lowin-box lowin-login">
            <div class="lowin-box-inner">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                <div class="form-horizontal">

                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.ID)
                    <p>Edit</p>
                    <div class="lowin-group">
                        <label>
                            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" })
                        </label>
                        <input class="lowin-input"
                               @Html.EditorFor(model => model.Username)
                               @Html.ValidationMessageFor(model => model.Username)

                    </div>
                    <div class="lowin-group">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                        <input class="lowin-input"
                               @Html.EditorFor(model => model.Password)
                               @Html.ValidationMessageFor(model => model.Password)

                    </div>

                    <div class="lowin-group">
                        @Html.LabelFor(model => model.RegisterTime, htmlAttributes: new { @class = "control-label col-md-2" })
                        <input class="lowin-input"
                               @Html.EditorFor(model => model.RegisterTime)
                               @Html.ValidationMessageFor(model => model.RegisterTime)

                    </div>

                    <div class="lowin-group">
                        @Html.LabelFor(model => model.Permission, htmlAttributes: new { @class = "control-label col-md-2" })
                        <input class="lowin-input"
                               @Html.EditorFor(model => model.Permission)
                               @Html.ValidationMessageFor(model => model.Permission)

                    </div>
                    <div class="lowin-group">
                        @Html.LabelFor(model => model.Permission, htmlAttributes: new { @class = "control-label col-md-2" })
                        <input class="lowin-input"
                               @Html.EditorFor(model => model.Sys_Role)
                               @Html.ValidationMessageFor(model => model.Sys_Role)

                    </div>

                    <div class="lowin-group">
                        @Html.LabelFor(model => model.Company_id, htmlAttributes: new { @class = "control-label col-md-2" })
                        <input class="lowin-input" @Html.EditorFor(model => model.Company_id) @Html.ValidationMessageFor(model => model.Company_id)

                    </div>

                    <div class="lowin-group">
                        @Html.LabelFor(model => model.Role, htmlAttributes: new { @class = "control-label col-md-2" })
                        <input class="lowin-input"
                               @Html.EditorFor(model => model.Role)
                               @Html.ValidationMessageFor(model => model.Role)
                    </div>

                    <div class="lowin-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="lowin-btn" />
                        </div>
                    </div>
                </div>
                }

                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    </div>
</div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
