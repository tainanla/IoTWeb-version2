@model IEnumerable < OneNETDataReceiver.ViewModel.UserDevice >
    @{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}
    <table class="ui celled selectable right aligned table" style="width: 100%;">
       <tr>
            <th style="text-align:center;">
                设备名称
            </th>
            <th style="text-align:center;">
                设备序列号
            </th>
            <th style="text-align:center;">
                设备状态（1为开启状态）
            </th>
            <th style="text-align:center;">
                更新时间
            </th>
            <th></th>

        </tr>

        @foreach (var item in Model)

        {

            <tr>
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.DeviceName)
                </td>
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.UserSN)
                </td>
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.DeviceValue)
                </td>
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    <div class="ui stackable equal width grid">
                        <div class="column">
                            <button class="teal ui button">
                                @Html.ActionLink("设备管理", "Edit", new { id = item.ID })
                            </button>
                        </div>
                    </div>
                </td>

            </tr>

        }

    </table>

