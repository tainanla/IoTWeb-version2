<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>@ViewBag.Title</title>
    <!--- Site CSS -->
    <link rel="stylesheet" type="text/css" href="~/CSS/components/reset.css">
    <link rel="stylesheet" type="text/css" href="~/CSS/components/site.css">
    <link rel="stylesheet" type="text/css" href="~/CSS/components/grid.css">

    <!--- Component CSS -->
    <link rel="stylesheet" type="text/css" href="~/CSS/components/menu.css">
    <link rel="stylesheet" type="text/css" href="~/CSS/components/input.css">
    <link rel="stylesheet" type="text/css" href="~/CSS/components/dropdown.css">
    <link rel="stylesheet" type="text/css" href="~/CSS/components/icon.css">
    <link rel="stylesheet" type="text/css" href="~/CSS/components/button.css">
    <link rel="stylesheet" type="text/css" href="~/CSS/components/transition.css">
    <link rel="stylesheet" type="text/css" href="~/CSS/xiala.css">
    <!--- Example Libs -->
    <link rel="stylesheet" type="text/css" href="~/CSS/components/popup.css">
    <script src="~/JS/jquery-min.js"></script>
    <script src="~/JS/assets/library/iframe-content.js"></script>
    <script src="~/JS/assets/show-examples.js"></script>
    <script type="text/javascript" src="~/CSS/components/popup.js"></script>

    <!--- Component JS -->
    <script type="text/javascript" src="~/CSS/components/transition.js"></script>
    <script type="text/javascript" src="~/CSS/components/dropdown.js"></script>

    <!--- Example CSS -->
    <style>

        .hidden.menu {
            display: none;
        }

        .masthead.segment {
            min-height: 700px;
            padding: 1em 0em;
        }

        .masthead .logo.item img {
            margin-right: 1em;
        }

        .masthead .ui.menu .ui.button {
            margin-left: 0.5em;
        }

        .masthead h1.ui.header {
            margin-top: 3em;
            margin-bottom: 0em;
            font-size: 4em;
            font-weight: normal;
        }

        .masthead h2 {
            font-size: 1.7em;
            font-weight: normal;
        }

        .ui.vertical.stripe {
            padding: 8em 0em;
        }

            .ui.vertical.stripe h3 {
                font-size: 2em;
            }

            .ui.vertical.stripe .button + h3,
            .ui.vertical.stripe p + h3 {
                margin-top: 3em;
            }

            .ui.vertical.stripe .floated.image {
                clear: both;
            }

            .ui.vertical.stripe p {
                font-size: 1.33em;
            }

            .ui.vertical.stripe .horizontal.divider {
                margin: 3em 0em;
            }

        .quote.stripe.segment {
            padding: 0em;
        }

            .quote.stripe.segment .grid .column {
                padding-top: 5em;
                padding-bottom: 5em;
            }

        .footer.segment {
            padding: 5em 0em;
        }

        .secondary.pointing.menu .toc.item {
            display: none;
        }
    </style>

    <!--- Example Javascript -->
    <script>
        $(document)
            .ready(function () {
                $('.ui.menu .ui.dropdown').dropdown({
                    on: 'hover'
                });
                $('.ui.menu a.item')
                    .on('click', function () {
                        $(this)
                            .addClass('active')
                            .siblings()
                            .removeClass('active')
                            ;
                    })
                    ;
            })
            ;
    </script>

</head>
<body>
    <div class="ui inverted vertical masthead center aligned segment">
        <div class="ui container">
            <div class="ui large secondary inverted pointing menu">
                <a class="toc item">
                    <i class="sidebar icon"></i>
                </a>
                <a class="item" href="/UserRole/CompanyAdmin">用户管理</a>
                <a class="item" href="/CompanyDevice/Admin">设备管理</a>
                <a class="item" href="/UserHistory/Admin">历史查询</a>
                <a class="item" href="~/Another">设备监控</a>
                <a class="item" href="/Display/Index">统计图</a>
                <div class="right item">
                    <a>欢迎您，企业管理员</a>
                    <a class="ui inverted button" href="/User/Logout">Sign Up</a>
                </div>
            </div>
        </div><div>

            @RenderBody()
        </div>
    </div>

</body>
</html>
