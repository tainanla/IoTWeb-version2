@model OneNETDataReceiver.Model.Device

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>管理设备</h2>

<link rel="stylesheet" href="~/CSS/auth.css">

<div class="lowin">
    <div class="lowin-wrapper">
        <div class="lowin-box lowin-login">
            <div class="lowin-box-inner">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.ID)
                    <p>Edit</p>
                    <div class="lowin-group">
                        @Html.LabelFor(model => model.SN, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SN)
                            @Html.ValidationMessageFor(model => model.SN)
                        </div>
                    </div>

                    <div class="lowin-group">
                        @Html.LabelFor(model => model.Value, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Value)
                            @Html.ValidationMessageFor(model => model.Value)
                        </div>
                    </div>

                    <div class="lowin-group">
                        @Html.LabelFor(model => model.Device_name, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Device_name)
                            @Html.ValidationMessageFor(model => model.Device_name)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CreateTime, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CreateTime)
                            @Html.ValidationMessageFor(model => model.CreateTime)
                        </div>
                    </div>

                    <div class="lowin-group">
                        @Html.LabelFor(model => model.Company_id, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Company_id)
                            @Html.ValidationMessageFor(model => model.Company_id)
                        </div>
                    </div>

                    <div class="lowin-group">
                        @Html.LabelFor(model => model.Role, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Role)
                            @Html.ValidationMessageFor(model => model.Role)
                        </div>
                    </div>

                    <div class="lowin-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="lowin-btn"  />
                        </div>
                    </div>
                </div>
                }

                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
